@model SWD392_Meraki_Web.Models.User

<h2>Register</h2>
<div asp-validation-summary="All"></div>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div>
        <label asp-for="Username"></label>
        <input asp-for="Username" />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" type="text" />
    </div>
    <div>
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" type="date" />
    </div>
    <div>
        <label asp-for="Gender"></label>
        <select name="Gender" id="Gender" required>
            <option value="">-- Select Gender --</option>
            <option value="0" selected>Male</option>
            <option value="1">Female </option>
            <option value="2">Others</option>
        </select>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" type="text" />
    </div>
    <div>
        <label asp-for="Role" hidden></label>
        <input asp-for="Role" type="int" value="0" hidden/>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Register</button>
</form>
