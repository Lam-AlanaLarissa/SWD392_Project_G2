@model User
<div asp-validation-summary="All"></div>
<form method="post">
    <div>
        <label asp-for="Username">Username</label>
        <div>
            <input type="username" asp-for="Username">
        </div>
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <div>
            <input type="password" asp-for="Password">
        </div>
    </div>
    <button>Login</button>
    <a href="/auth/googlelogin?returnUrl=@Context.Request.Query["ReturnUrl"]">Google Login</a>
</form>

