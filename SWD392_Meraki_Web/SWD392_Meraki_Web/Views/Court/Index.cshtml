<!-- Views/Court/Index.cshtml -->
@model IEnumerable<SWD392_Meraki_Web.Models.Court>

@{
    ViewData["Title"] = "Court List";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h1>Court List</h1>

<table class="table table-striped table-bordered table-hover" ">
    <thead class="table-light">
        <tr>
            <th>Court ID</th>
            <th>Court Name</th>
            <th>Location</th>
            <th>Opening Hours</th>
            <th>Closing Hours</th>
            <th>Status</th>
            <th>In Use</th>
            <th>CreatedAt</th>
            <th>CreatedBy</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var court in Model)
        {
            <tr>
                <td>@court.CourtId</td>
                <td>@court.CourtName</td>
                <td>@court.Location</td>
                <td>@court.OpeningHours.ToString("hh\\:mm")</td>
                <td>@court.ClosingHours.ToString("hh\\:mm")</td>
                <td>@court.Status</td>
                <td>@court.IsUsing</td>
                <td>@court.CreateAt.ToString("yyyy-MM-dd")</td>
                <td>@court.CreateBy</td>

                <td>
                    <a href="/" class="text-decoration-none">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a href="/" class="text-decoration-none" onclick="return confirm('Are you sure you want to delete this item?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    <a href="/">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
