@model SWD392_Meraki_Web.Models.BookingTypes

@{
    ViewData["Title"] = "Booking Package List";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h1>Booking Package List</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Booking Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bookingType in Model)
        {
            <tr data-id="@bookingType.TypeId">
                <td>@bookingType.TypeName</td>
                <td>@bookingType.TypeDescription</td>
                <td>@(bookingType.Status == 1 ? "Active" : "Inactive")</td>

                <td>
                    <a href="/" class="text-decoration-none">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="del bi bi-trash"></a>
                    <a href="/">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["Message"] != null)
{
    <div id="tempDataMessage" class="alert alert-success">
        @TempData["Message"]
    </div>
}
<div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="BookingController" asp-action="DeleteBookingPackage" method="delete" class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="delModalLabel">Do you want to delete this booking package?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="id">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>